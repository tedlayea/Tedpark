<div id="information_board">
  <button id="pin">Pin</button>
  <p id="info">  </p>
    <%= image_tag("where_am_I.png", :alt => "Where I am?", :id=>"current_map") %>
</div>

<script>
  $(document).ready(function(){
    var pin_button=$("#pin");
    pin_button.on("click",getLocation);
    function getLocation(){
    navigator.geolocation.getCurrentPosition(disply);
    function disply(position) {
      var long = position.coords.longitude.toFixed(3)
      var lat = position.coords.latitude.toFixed(3)
      var info_text=$("#info").html("Latitude: " +lat +"<br>Longitude: "
          +long+ "<br>Date and Time: "+"<br>Weather:");
      var mapUrl = "http://maps.google.com/maps/api/staticmap?center="+lat+','+long+'&zoom=21&size=600x600&maptype=roadmap&sensor=false';
      var info_image=$("#current_map").attr("src",mapUrl);
    }
  }

  })

</script>
